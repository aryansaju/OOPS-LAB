# Task 1: Separate the string into comma-separated values
X = "India.is.my.country"
separated_values = X.replace('.', ',')
print("The seprated string is ", separated_values)

# Task 2 Remove a given character from a string
Y = "M.A.N.I.P.A.L"
remove = input()
removed_char = Y.replace(remove, '')
print("Removing given charecter :", removed_char)

# Task 3: Remove the dots from the above string
removed_dots_string = Y.replace('.', '')
print("Task 2C:", removed_dots_string)

# Task 4: Sort strings alphabetically
strings = ["banana", "apple", "cherry", "date"]
sorted_strings = sorted(strings)
print("Task 3:", sorted_strings)

# Task 5: Reverse a user input string
user_string = input("Enter a string to reverse: ")
reversed_string = user_string[::-1]
print("Task 4:", reversed_string)

# Task 6: Check if a string contains only digits
string_to_check = input("Enter a string to check if it contains only digits: ")
if string_to_check.isdigit():
    print("Task 5: The string contains only digits.")
else:
    print("Task 5: The string does not contain only digits.")

# Task 7: Find the number of vowels in a string
input_string = input("Enter a string to count vowels: ")
vowels = "aeiouAEIOU"
vowel_count = sum(1 for char in input_string if char in vowels)
print("Task 6: Number of vowels in the string:", vowel_count)
